<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/action_bar_primary</item>
        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.AppCompat.DrawerArrowToggle"
        parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorControlNormal</item>
    </style>
    
    <!-- Drawer menu buttons -->
    <style name="drawer_menu_btn" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/drawer_btn_bg</item>
        <item name="android:drawablePadding">22dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAppearanceButton">@style/Base.TextAppearance.AppCompat</item>
    </style>
    
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divider_light_grey</item>
    </style>

    <style name="base_add_button" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="add_image_button" parent="base_add_button">
        <item name="android:background">@drawable/add_img_btn_bg</item>
    </style>

    <style name="ButtonAdd" parent="base_add_button">
        <item name="android:background">@drawable/add_btn_bg</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:text">+</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Recipe texts -->

    <style name="label_style" parent="Base.TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/very_dark_grey</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="content_style" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/very_dark_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <!-- End Recipe texts -->

</resources>
