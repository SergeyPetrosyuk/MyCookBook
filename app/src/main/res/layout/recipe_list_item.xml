<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp">

    <ImageView
        android:id="@+id/iv_recipe_icon"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/no_image"/>

    <TextView
        android:id="@+id/tv_recipe_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/hello_world"
        android:textColor="@android:color/white"
        android:background="@color/recipe_or_category_title"
        android:gravity="center"
        android:textSize="20sp"
        android:paddingRight="5dp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:shadowColor="#000"
        android:shadowRadius="5"
        android:layout_alignBottom="@id/iv_recipe_icon"/>

    <ProgressBar
        android:id="@+id/pb_recipe_list_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <View
        android:id="@+id/recipe_item_foreground"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/recipe_list_item_bg"
        android:clickable="true"/>

    <RelativeLayout
        android:id="@+id/recipe_item_checkbox_holder"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:visibility="gone">
        <CheckBox
            android:id="@+id/recipe_item_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"/>
        </RelativeLayout>

    <ImageView
        android:id="@+id/iv_favorite_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/favorite_checked_white"
        android:visibility="gone"/>
</RelativeLayout>