<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_category_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="30dp"
        android:src="@mipmap/no_image"/>

    <TextView
        android:id="@+id/tv_category_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World Hello World Hello World Hello World Hello World Hello World Hello World "
        android:gravity="center_vertical"
        android:layout_toRightOf="@id/iv_category_image"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:textSize="20sp"/>

    <View
        android:id="@+id/category_item_foreground"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/recipe_list_item_bg"
        android:clickable="true"/>

</RelativeLayout>