<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/action_bar_primary</item>
        <item name="android:colorPrimaryDark">@color/action_bar_dark_primary</item>

        <item name="drawerArrowStyle">@style/Widget.AppCompat.DrawerArrowToggle</item>
    </style>

    <style name="Widget.AppCompat.DrawerArrowToggle"
        parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">?attr/colorControlNormal</item>
    </style>

    <style name="ButtonAdd" parent="Widget.AppCompat.ActionButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/add_btn_bg</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:text">+</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:elevation">5dp</item>
        <item name="android:translationZ">5dp</item>
    </style>
</resources>